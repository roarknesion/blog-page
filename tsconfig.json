{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": { "~/*": ["./*"] },

    "types": ["@types/node", "@nuxt/types", "@nuxt/content"]
  },

  "exclude": ["node_modules", ".vscode", "build"],
  "include": ["**/*.ts", "**/*.vue"],

  "ts-node": { "compilerOptions": { "module": "commonjs" } }
}
